<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/PredictionFragment">

    <fragment
        android:id="@+id/PredictionFragment"
        android:name="com.example.csiro.PredictionFragment"
        android:label="@string/prediction_fragment_label"
        tools:layout="@layout/fragment_prediction">
        <action
            android:id="@+id/action_PredictionFragment_to_ResultFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.csiro.ResultFragment"
        android:label="@string/result_fragment_label"
        tools:layout="@layout/fragment_result">
        <action
            android:id="@+id/action_ResultFragment_to_PredictionFragment"
            app:destination="@id/PredictionFragment" />
    </fragment>
</navigation>